                    background-size: cover;
                }
            </style>




            <form class="section-body" method="POST">


                <p class="text01">报修信息填写</p>
                <p class="contenter">>- - - - - - - - - -  </p>
                <div class="table-responsive">
                    <table class="table" style="position: absolute;width:40%;top:25%;left: 28%;">
                        <thead>
                            <tr style="">
                                <th style="width:30%;">信息</th>
                                <th>输入</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="color:#574B90 ">申请人</td>
                                <td> <input class="" style="width:20%;	" id="applicator" type="text" name="time" tabindex="2" required></td>
                            </tr>
                            <tr>
                                <td style="color:#574B90 ">物品代码</td>
                                <td> <input style="width:50%" id="tool_code" type="text" name="tool_code" tabindex="2" required></td>
                            </tr>
                            <tr>
                                <td style="color:#574B90 ">故障照片</td>
                                <td>  <label class="sr-only" for="inputfile">文件输入</label> <input type="file" id="inputfile" name="inputfile"></td>
                            </tr>
                            <tr>
                                <td style="color:#574B90 ">故障描述(请描述故障原因、故障情况等）</td>
                                <td>
                                    <textarea style="width:60%;height: 180px" id="description" name="description" tabindex="2" required>
          </textarea>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <script>
                        function onclk3() {
                            if (isNaN(document.getElementById("applicator").value) && isNaN(document.getElementById("tool_code").value) && isNaN(document.getElementById("inputfile").value) && isNaN(document.getElementById("description").value)) {
                                alert("故障信息提交成功");
                            }
                            else {
                                alert("请填写完整信息")
                            }
                        }
                    </script>

                    <div class="btn02">
                        <button type="submit" class="btn btn-primary btn-block" tabindex="4" onclick="onclk3()">
                            提交
                        </button>
                    </div>
                </div>

            </form>







        </div>
